<h1>Eat-Da-Burger!</h1>

<img src="/images/burger.png">
<div class="row">
    <div class-"col-md-6">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Your burger!</label>
                <input type="text" class="form-control" id="user-burger" aria-describedby="new-burger"
                    placeholder="Enter burger name">
                <small id="new-burger" class="form-text text-muted"></small>
            </div>
            <button type="button" class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<br>
<div class="row">
    <div class='col-md-4' id="fresh-burgers">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                <button class="btn btn-sm btn-warning" data-id="{{id}}" data-devoured="{{devoured}}">
                    DEVOUR!
                </button>
            </li>
            <br>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class='col-md-4' id="devoured-burgers">
        <ul id="devoured-burgers">
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{id}} {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>