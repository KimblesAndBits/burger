<h1>Eat-Da-Burger!</h1>

<div class="row">
    <div class-"col-md-6">
        <img src="/images/burger.png">
        <form>
            <div class="form-group">
                <h3>Your burger!</h3>
                <input type="text" class="form-control" id="user-burger" aria-describedby="new-burger"
                    placeholder="Enter burger name">
                <small id="new-burger" class="form-text text-muted"></small>
            </div>
            <button id="submit-button" type="button" class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<br>
<div class="row">
    <div class='col-md-4' id="fresh-burgers">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="fresh">
                {{burger_name}}

                <button class="btn btn-sm btn-danger eat-burger" data-id="{{id}}">
                    DEVOUR!
                </button>
            </li>
            <br>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class='col-md-4' id="devoured-burgers">
        <ul id="devoured-burgers">
            {{#each burgers}}
            {{#if devoured}}
            <li class="eaten">
                {{id}}.) {{burger_name}}
            </li>
            <br>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>